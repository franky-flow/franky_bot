<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- BASE LINK-->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK-->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis_link" />
        <origin xyz="-0.26 0 0"/>
    </joint>

    <link name="chassis_link">
        <visual>
            <origin xyz="0.1725 0 0.07"/>
            <geometry>
                <box size="0.345 0.24 0.14"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.1725 0 0.07"/>
            <geometry>
                <box size="0.345 0.24 0.14"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.345" y="0.24" z="0.14">
            <origin xyz="0.1725 0 0.07" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis_link">
        <material>Gazebo/Orange</material>
    </gazebo>


    <!-- LEFT WHEEL LINK-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
            <origin xyz="0 0.14 0.028" rpy="-${pi/2} 0 0"/>
            <axis xyz="0 0 1"/>        
    </joint>

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.03"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.03"/>
            </geometry>
            <material name="orange"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>
    
    <!-- RIGHT WHEEL LINK-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0 -0.14 0.028" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.035">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    
    <!-- CASTER WHEEL LINK-->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.065 0 0"/>
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.015">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel_link">
        <material>Gazebo/Black</material>
        <!-- friction to reduce slipping -->
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
</robot>